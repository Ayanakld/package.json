<div class="formes">
    <form action="/filter" method="POST" class="filtering">
        <h1 class="tittle">Filtering</h1>
        <div class="row ">
            <div class="col-2 ">
                <p class="labels">Country:</p>
            </div>
            <div class="col-8 ">
                <input type="text" id="country" name="country" required>
            </div>
        </div>
        <div class="row ">
            <div class="col-2 ">
                <p class="labels">Industry:</p>
            </div>
            <div class="col-8 ">
                <input type="text" id="industry" name="industry" >
            </div>
        </div>

        <div class="row ">
            <div class="col-2 ">
                <p class="labels">Job:</p>
            </div>
            <div class="col-8 ">
                <select type="text" id="job" name="job">
                    <option>Software</option>
                    <option>Abuser</option>
                    <option>Baker</option>
                    <option>Seller-Consultant</option>
                    <option>Selling</option>
                    <option>CEO</option>
                    <option>Professor</option>
                    <option>Teaching</option>
                    <option>Perfumer</option>
                </select>
            </div>
        </div>
        <div class="row ">
            <div class="col-2 ">
                <p class="labels">Time:</p>
            </div>
            <div class="col-8 ">
                <select name="time" id="time">
                    <option>Part-time</option>
                    <option>Full-time</option>
                </select>            </div>
        </div>
        <div class="row ">
            <div class="col-2 ">
                <p class="labels">Type:</p>
            </div>
            <div class="col-8 ">
                <select name="type" id="type">
                    <option></option>
                    <option>Based</option>
                    <option>Remote</option>
                </select>
            </div>
        </div>
        <div class="row ">
            <div class="col-2 ">
                <p class="labels">Salary:</p>
            </div>
            <div class="col-8 ">
                <input type="number" id="salary" name="salary">
            </div>
        </div>
        <div class="confirm">
            <button class="back" href="/vacancies" > <a href="/vacancies">Go Back</a> </button>
            <input type="submit" class="confirmbutton" value="Submit">
        </div>

    </form>
